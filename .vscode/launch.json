{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "🐛 Debug Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "autoAttachChildProcesses": true
        },
        {
            "name": "🌐 Debug Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src",
            "sourceMaps": true
        },
        {
            "name": "🔧 Debug Backend",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/index.js",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "🧪 Debug Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--runInBand",
                "--no-coverage"
            ],
            "console": "integratedTerminal"
        },
        // ...existing code...
    ],
    "compounds": [
        {
            "name": "🚀 Debug Full Stack",
            "configurations": [
                "🔧 Debug Backend",
                "🌐 Debug Frontend"
            ]
        }
    ]
}
